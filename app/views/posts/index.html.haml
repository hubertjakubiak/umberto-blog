%p#notice= notice
%h1 Posts
%table.table.table-hover
  %thead
    %tr
      %th Title
      %th Body
      %th{:colspan => "3"}
  %tbody
    - @posts.each do |post|
      %tr
        %td= post.title
        %td= post.body
        %td= link_to 'Show', post, class: 'btn btn-success'
        %td= link_to 'Edit', edit_post_path(post), class: 'btn btn-default'
        %td= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'
%br/
= link_to 'New Post', new_post_path, class: 'btn btn-primary btn-lg'
